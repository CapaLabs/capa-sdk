{
  "name": "@capa/sdk",
  "version": "0.1.0",
  "description": "Official Capa SDK for Node.js and TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./v2": {
      "types": "./dist/v2/index.d.ts",
      "import": "./dist/v2/index.js",
      "require": "./dist/v2/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:check": "tsc --noEmit",
    "test": "pnpm run build:check && pnpm run test:integration",
    "test:integration": "node test/integration.js",
    "test:package": "pnpm run build && pnpm pack && pnpm run test:unpacked",
    "test:unpacked": "node test/package-test.js",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "check": "pnpm run format:check && pnpm run build:check"
  },
  "keywords": [
    "capa",
    "sdk",
    "crypto",
    "api",
    "typescript"
  ],
  "author": "Capa",
  "license": "ISC",
  "devDependencies": {
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "form-data": "^4.0.4"
  }
}
